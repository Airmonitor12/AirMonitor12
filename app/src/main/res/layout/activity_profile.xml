<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_centerHorizontal="true"
    android:paddingBottom="10dp"
    tools:context=".Profile">
<ImageView
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:background="@color/teal_200"
    android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_img"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="@string/Name"
        android:textColor="#FF018786"
        android:textColorHint="#FF018786"
        android:textSize="14sp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:hint="@string/Email"
        android:textColor="#90949C"
        android:textSize="14sp"
        android:textStyle="normal"
        />

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="86dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/tab_log_out"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sign_in_button"
        />
    <TextView
        android:id="@+id/tab_log_out_text"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/tab_log_out"
        android:layout_alignStart="@id/tab_log_out"
        android:layout_alignBottom="@id/tab_log_out"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Log Out"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16sp"
        />





</RelativeLayout>


