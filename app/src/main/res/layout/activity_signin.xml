<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context=".SignIn">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="248dp"
        android:layout_height="70dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Smart Indoor Air Quality Meter"
        android:textAlignment="center"
        android:textColor="#001E2C"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo3" />

    <ImageView
        android:id="@+id/tab_sign_in"
        android:layout_width="282dp"
        android:layout_height="70dp"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/sign_in_button" />

    <TextView
        android:id="@+id/tab_sign_in_text"
        android:layout_width="282dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/tab_sign_in"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Sign in with Email"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/tab_google"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_below="@id/tab_sign_in"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:src="@drawable/gmail_icon" />

    <ImageView
        android:id="@+id/tab_facebook"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:src="@drawable/facebook_icon" />
</RelativeLayout>